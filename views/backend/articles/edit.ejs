<%- include('../layouts/header.ejs'); -%>
    <div class="container">
            <% var article = JSON.parse(data_article); if(article!=null && article.length > 0) { %>
                <% article.forEach(function(item, index){ %>
           <form action="<%= get_admin_url(); %>/articles/update?_method=PUT" method="POST">
                <input type="hidden" name="id" value="<% if(item._id) { %><%= item._id %><% } %>">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="title" class="form-control" value="<% if(item.title) { %><%= item.title %><% } %>" required>
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea name="content" rows="4" class="form-control" required><% if(item.content) { %><%= item.content %><% } %></textarea>
            </div>
            <div class="form-group">
                <label>Tags</label>
                <select multiple data-role="tagsinput" class="form-control" id="tags" name="tags[]">
                        <% var means =  item.tags; if(means!=null && means.length > 0) { %>
                            <% means.forEach(function(item_mean, index){ %>
                                <option value="<% if(item_mean) { %><%= item_mean %><% } %>"><% if(item_mean) { %><%= item_mean %><% } %></label>
                            <% }) %>
                        <% } %> 
                </select>
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
        <% }) %>
        <% } %>
    </div>
<%- include('../layouts/footer'); -%>
